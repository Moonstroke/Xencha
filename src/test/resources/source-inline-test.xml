<test xmlns="http://moonstroke.github.io/xencha" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://moonstroke.github.io/xencha ../../main/xsd/test.xsd">
	<name>Tests for embedded source</name>
	<source>
		<inline>
			<!-- This stylesheet transforms (a subset of) HTML into XSL-FO -->
			<xsl:stylesheet version="2.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:fo="http://www.w3.org/1999/XSL/Format">
				<xsl:template match="/">
					<fo:root>
						<fo:layout-master-set>
							<fo:simple-page-master master-name="a4" page-height="29.7cm" page-width="21cm">
								<fo:region-body region-name="xsl-region-body" margin="25mm"/>
							</fo:simple-page-master>
						</fo:layout-master-set>
						<xsl:apply-templates/>
					</fo:root>
				</xsl:template>
			
				<xsl:template match="html">
					<fo:page-sequence master-name="a4">
						<fo:static-content flow-name="xsl-region-before">
							<xsl:apply-templates select="head/title"/>
						</fo:static-content>
						<xsl:apply-templates select="body"/>
					</fo:page-sequence>
				</xsl:template>
			
				<xsl:template match="title">
					<fo:block text-align="center">
						<xsl:value-of select="text()"/>
					</fo:block>
				</xsl:template>
			
				<xsl:template match="h1">
					<fo:block font-weight="bold" text-decoration="underline" font-size="24pt">
						<xsl:value-of select="text()"/>
					</fo:block>
				</xsl:template>
			
				<xsl:template match="p">
					<fo:block>
						<xsl:value-of select="text()"/>
					</fo:block>
				</xsl:template>
			</xsl:stylesheet>
		</inline>
	</source>
	<cases>
		<case>
			<name>Test for embedded source with external input/output</name>
			<input>
				<path>data/external-input.html</path>
			</input>
			<expectedOutput>
				<path>data/external-output.fo</path>
			</expectedOutput>
		</case>
		<case>
			<name>Test for embedded source with embedded input/output</name>
			<input>
				<inline>
					<html lang="en">
						<head>
							<title>Test with embedded input</title>
						</head>
						<body>
							<h1>This is a test case that uses embedded input data</h1>
							<p>This, incidentally, is the embedded input data.</p>
						</body>
					</html>
				</inline>
			</input>
			<expectedOutput>
				<inline>
					<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">
						<fo:layout-master-set>
							<fo:simple-page-master master-name="a4" page-height="29.7cm" page-width="21cm">
								<fo:region-body region-name="xsl-region-body" margin="25mm"/>
								<fo:region-before region-name="xsl-region-before" extent="2cm" margin-top="5mm"/>
							</fo:simple-page-master>
						</fo:layout-master-set>
						<fo:page-sequence master-reference="a4">
							<fo:static-content flow-name="xsl-region-before">
								<fo:block text-align="center" margin-top="5mm" font-style="italic">Test with external input</fo:block>
							</fo:static-content>
							<fo:flow flow-name="xsl-region-body">
								<fo:block font-weight="bold" text-decoration="underline" font-size="24pt">This is a test case that uses embedded output data</fo:block>
								<fo:block>This, incidentally, is the embedded output data.</fo:block>
							</fo:flow>
						</fo:page-sequence>
					</fo:root>
				</inline>
			</expectedOutput>
		</case>
	</cases>
</test>