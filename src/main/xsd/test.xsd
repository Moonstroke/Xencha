<schema xmlns="http://www.w3.org/2001/XMLSchema" targetNamespace="http://moonstroke.github.io/xencha" xmlns:xencha="http://moonstroke.github.io/xencha" elementFormDefault="qualified">
	<element name="test" type="xencha:TestSuite">
		<annotation>
			<documentation>The test suite being defined.</documentation>
		</annotation>
	</element>
	<complexType name="TestSuite">
		<annotation>
			<documentation>The definition model of a test suite.</documentation>
		</annotation>
		<all>
			<element name="name" type="string" minOccurs="0">
				<annotation>
					<documentation>The name of the test suite.
					If not specified, the base name of the descriptor file will be used.</documentation>
				</annotation>
			</element>
			<element name="source" type="xencha:Source"/>
			<element name="cases">
				<complexType>
					<sequence>
						<element name="case" type="xencha:Case" maxOccurs="unbounded"/>
					</sequence>
				</complexType>
			</element>
		</all>
	</complexType>
	<complexType name="Source">
		<annotation>
			<documentation>A data component of tests.</documentation>
		</annotation>
		<choice>
			<element name="path" type="string"/>
			<element name="inline" type="xencha:InlineSource"/>
		</choice>
	</complexType>
	<complexType name="InlineSource" mixed="true">
		<sequence minOccurs="0">
			<any processContents="skip"/>
		</sequence>
	</complexType>
	<complexType name="Case">
		<annotation>
			<documentation>The definition of an elementary execution of the test.</documentation>
		</annotation>
		<all>
			<element name="input" type="xencha:Source"/>
			<element name="expectedOutput" type="xencha:Source"/>
		</all>
	</complexType>
</schema>
